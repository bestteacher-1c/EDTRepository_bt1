Процедура Изменить(Номенклатура, Клиент, Количество) Экспорт

	Движение = СоздатьМенеджерЗаписи();

	Движение.Номенклатура = Номенклатура;
	Движение.Клиент = Клиент;

	Если (Количество = 0) Тогда
		Движение.Удалить();
	Иначе
		Движение.Количество = Количество;
		Движение.Записать();

	КонецЕсли;

КонецПроцедуры